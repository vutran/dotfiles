# include mysql
export PATH="/usr/local/mysql/bin:$PATH"

source "/Users/$USER/h/config/envrc" # Generated by configure_node_if_necessary.js

alias h="cd /Users/$USER/h/source/hyperbase"

# Quick commands
alias hinstall="./yarn_install.sh && ./bin/transpile.js --once && grunt admin:dev:migrateAllDatabases"
alias htypecheck="./run_tests.js server_shared/orphaned_unit_tests/test_files/typescript_check_parallel.test.tsx"
alias hjenkins="./bin/trigger_build --job_name=hyperbase-ad-hoc --should_run_attempts_in_parallel=true --num_attempts=100"

# Airtable dev
export ENABLE_LOCALSTACK=1
